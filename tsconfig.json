{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "es2019"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowUnreachableCode": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "baseUrl": "src",
        "rootDirs": [
            "src",
            "test"
        ],
        "paths": {
            "@/*": [
                "*"
            ]
        },
    },
    "include": [
        "src","test"
    ]
}